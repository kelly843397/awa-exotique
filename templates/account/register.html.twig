{% extends 'base.html.twig' %}


{% block content %}
<div class="container">
    <h1>Inscription</h1>
    
    {% if csrf_token is defined %}
        <form action="/check-register" method="post">
            <input type="hidden" name="csrf-token" value="{{ csrf_token }}">

            <fieldset class="mb-3">
                <label for="firstName" class="form-label">Prénom :</label>
                <input type="text" name="firstName" id="firstName" class="form-control" required>
            </fieldset>

            <fieldset class="mb-3">
                <label for="lastName" class="form-label">Nom :</label>
                <input type="text" name="lastName" id="lastName" class="form-control" required>
            </fieldset>

            <fieldset class="mb-3">
                <label for="email" class="form-label">Email :</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </fieldset>

            <fieldset class="mb-3">
                <label for="phone" class="form-label">Téléphone :</label>
                <input type="tel" name="phone" id="phone" class="form-control" required>
            </fieldset>

            <fieldset class="mb-3">
                <label for="password" class="form-label">Mot de passe :</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </fieldset>

            <fieldset class="mb-3">
                <label for="confirm-password" class="form-label">Confirmer le mot de passe :</label>
                <input type="password" name="confirm-password" id="confirm-password" class="form-control" required>
            </fieldset>

            <fieldset class="mb-3">
                <label for="role" class="form-label">Rôle :</label>
                <input type="text" name="role" id="role" class="form-control" required>
            </fieldset>

            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </form>
    {% else %}
        <p>Token CSRF manquant. Veuillez recharger la page.</p>
    {% endif %}
    
    <p>Déjà un compte ? <a href="/login">Connectez-vous ici</a></p>
</div>
{% endblock %}
