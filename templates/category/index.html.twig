{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>

    <a href="{{ path('/categories/create') }}">Ajouter une nouvelle catégorie</a>

    <ul>
        {% for category in categories %}
            <li>
                {{ category.name }}
                <a href="{{ path('/categories/edit', {id: category.id}) }}">Modifier</a> |
                <a href="{{ path('/categories/delete', {id: category.id}) }}">Supprimer</a>
            </li>
        {% else %}
            <li>Aucune catégorie trouvée.</li>
        {% endfor %}
    </ul>
{% endblock %}
