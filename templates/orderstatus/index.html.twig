{% extends 'base.html.twig' %}

{% block title %}
    Mises à jour de statut de commande
{% endblock %}

{% block content %}
    <h1>Mises à jour de statut de commande</h1>

    <table>
        <thead>
            <tr>
                <th>Commande ID</th>
                <th>Statut</th>
                <th>Date de mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for update in statusUpdates %}
                <tr>
                    <td>{{ update.order_id }}</td>
                    <td>{{ update.status }}</td>
                    <td>{{ update.updated_at }}</td>
                    <td>
                        <!-- Lien pour modifier la mise à jour du statut -->
                        <a href="/awa-exotique/orders/{{ update.order_id }}/status/edit">Modifier</a> |
                        <!-- Lien pour supprimer la mise à jour du statut -->
                        <a href="/awa-exotique/orders/{{ update.order_id }}/status/delete">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune mise à jour de statut trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
