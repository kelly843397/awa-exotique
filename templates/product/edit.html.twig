{% extends 'base.html.twig' %}

{% block title %}Modifier le produit {{ product.name }}{% endblock %}

{% block body %}
    <h1>Modifier le produit {{ product.name }}</h1>
    
    {% if error is defined %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}
    
    <form action="/products/{{ product.id }}/update" method="post">
        <label for="name">Nom :</label>
        <input type="text" name="name" id="name" value="{{ product.name }}" required>
        
        <label for="price">Prix :</label>
        <input type="number" name="price" id="price" value="{{ product.price }}" required>
        
        <label for="category_id">Catégorie :</label>
        <input type="number" name="category_id" id="category_id" value="{{ product.category_id }}" required>
        
        <label for="picture">Image (URL) :</label>
        <input type="text" name="picture" id="picture" value="{{ product.picture }}" required>
        
        <button type="submit">Modifier</button>
    </form>
    <br><a href="/products">Retour à la liste des produits</a>
{% endblock %}
