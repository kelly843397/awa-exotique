{% extends 'base.html.twig' %}

{% block title %}
    Liste des Produits
{% endblock %}

{% block content %}
    <h1>Liste des Produits</h1>
    <a href="/awa-exotique/products/create">Ajouter un nouveau produit</a>

    <ul>
        {% for product in products %}
            <li>
                <strong>{{ product.name }}</strong> - {{ product.price }} €
                <a href="/awa-exotique/products/show?id={{ product.id }}">Voir</a> |
                <a href="/awa-exotique/products/edit?id={{ product.id }}">Modifier</a> |
                <a href="/awa-exotique/products/delete?id={{ product.id }}">Supprimer</a>
            </li>
        {% else %}
            <li>Aucun produit trouvé.</li>
        {% endfor %}
    </ul>
{% endblock %}
