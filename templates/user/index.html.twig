{% extends 'base.html.twig' %}

{% block title %}
    Liste des Utilisateurs
{% endblock %}

{% block content %}
    <h1>Liste des Utilisateurs</h1>
    <a href="/awa-exotique/users/create">Ajouter un nouvel utilisateur</a>

    <ul>
        {% for user in users %}
            <li>
                {{ user.firstName }} ({{ user.email }})
                <a href="/awa-exotique/users/show?id={{ user.id }}">Voir</a> |
                <a href="/awa-exotique/users/edit?id={{ user.id }}">Modifier</a> |
                <a href="/awa-exotique/users/delete?id={{ user.id }}">Supprimer</a>
            </li>
        {% else %}
            <li>Aucun utilisateur trouv√©.</li>
        {% endfor %}
    </ul>
{% endblock %}
